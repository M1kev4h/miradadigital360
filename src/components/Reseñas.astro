import Comentario from "./Comentario.astro";
import ImagenComentario1 from "../../public/imagencomentario1.jpg"
import ImagenComentario2 from "../../public/imagencomentario2.jpg"
import ImagenComentario3 from "../../public/imagencomentario3.jpg"
import StarCom from '../../public/icons/StarCom.astro';


const Comentario1 = { imagen : ImagenComentario1 ,
                    Descripcion:'Camara en la caja',
                    Nombre:'Roberto M',
                    Fecha: '10/12/24',
                    Comentarios: '¡Entrega rápida! Me llegó al día siguiente, ¡gracias!',
}

const Comentario2 = { imagen : ImagenComentario2 ,
                    Descripcion:'Local',
                    Nombre:'Agustín F',
                    Fecha: '10/12/24',
                    Comentarios: '¡Entrega rápidBuen Flash Llego rápido y tiene un tremendo flash; quité un foco que tenía y con la luz de la cámara es ya esta.a! Me llegó al día siguiente, ¡gracias!',
}

