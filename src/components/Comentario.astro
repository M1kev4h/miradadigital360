---
import { Image } from 'astro:assets';
interface Props { imagen: any;
     Descripcion: string;
      Nombre: string; 
      Fecha: string;
       Comentarios: string; 
       }

const { imagen  , Descripcion , Nombre, Fecha , Comentarios} = Astro.props;
import Verified from "../../public/icons/Verified.astro"

---

<section class="text-white rounded-t-2xl w-[250px] bg-[#1b1b20] ">
    <Image src={imagen} alt={Descripcion} class="h-auto w-fit rounded-t-2xl " />
    <article class="p-3">
        <h3 class="text-2xl flex gap-4 font-bold ">{Nombre}<span class="flex gap-1 text-sm mt-2 font-normal items-center"><Verified/> Verificado</span></h3>
        <span class="text-xs">{Fecha}</span>
        <div class="flex mt-2"><slot/></div>
        <p class="w-full text-pretty">{Comentarios}</p>
    </article>
</section>